<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/trophy_name_evaluate"
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="TextView"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="378dp"
        android:layout_height="76dp"
        android:fontFamily="@font/ubuntu"
        android:text="Number of users who collected this trophy:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophy_name_evaluate"
        app:layout_constraintVertical_bias="0.421" />

    <TextView
        android:id="@+id/collectors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="##"
        android:textColor="#6441A5"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Pictures by others"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collectors"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/collect_trophy_button"
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="#6441A5"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Collect Trophy"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="313dp"
        android:layout_height="269dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/collect_trophy_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <LinearLayout
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/trophy_image3"
                android:layout_width="155dp"
                android:layout_height="98dp"
                android:background="#0000"
                android:scaleType="centerCrop"
                android:onClick="onClick"
                app:srcCompat="@drawable/t2" />

            <ImageButton
                android:id="@+id/trophy_image2"
                android:layout_width="155dp"
                android:layout_height="84dp"
                android:scaleType="centerCrop"
                android:background="#0000"
                android:onClick="onClick"
                app:srcCompat="@drawable/t1"/>

            <ImageButton
                android:id="@+id/trophy_image1"
                android:layout_width="155dp"
                android:layout_height="101dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/t3"
                android:onClick="onClick"
                android:background="#0000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/trophy_image4"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/t1"
                android:onClick="onClick"
                android:background="#0000"/>

            <ImageButton
                android:id="@+id/trophy_image5"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                app:srcCompat="@drawable/t3"
                android:scaleType="centerCrop"
                android:onClick="onClick"
                android:background="#0000"/>

            <ImageButton
                android:id="@+id/trophy_image6"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                app:srcCompat="@drawable/t2"
                android:scaleType="centerCrop"
                android:onClick="onClick"
                android:background="#0000"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/sort_photos"
        android:layout_width="150dp"
        android:layout_height="61dp"
        android:background="#0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343"
        app:srcCompat="@drawable/frame_15__2_" />

    <TextView
        android:id="@+id/sortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Sort By"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/sort_photos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="@+id/sort_photos"
        app:layout_constraintTop_toTopOf="@+id/sort_photos"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="47dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/sort_photos"
        app:layout_constraintEnd_toStartOf="@+id/sortBy"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sort_photos"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/ellipse" />

</androidx.constraintlayout.widget.ConstraintLayout>